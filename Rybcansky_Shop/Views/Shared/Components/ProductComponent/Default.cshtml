<a href="@Url.Action("Index", "Product", new { id = this.ViewBag.Product.id })">
    <div class="card">
        <img class="card-img-top img-fluid" src="@Convert.ToString("/images/" + this.ViewBag.Picture.path)" alt="Card image cap" style="width: 300px; height: 300px; object-fit: scale-down;">
        <div class="card-body">
            <h5 class="card-title text-center">
                @ViewBag.Product.name
            </h5>
            <div>
                @if (@ViewBag.Product.price_Discount == null)
                {
                    <div class="text-center">
                        <p class="card-text text-success">@ViewBag.Product.price_Standart Kč</p>
                        <p></p>
                    </div>
                }
                else
                {
                    <div class="d-flex justify-content-around">
                        <p class="card-text text-danger"><s>@ViewBag.Product.price_Standart Kč</s></p>
                        <p class="card-text text-success">@ViewBag.Product.price_Discount Kč</p>
                    </div>
                }
            </div>
        </div>
    </div>
</a>