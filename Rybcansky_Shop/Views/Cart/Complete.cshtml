@{
    Layout = "Order_Layout";
}
<link rel="stylesheet" href="~/css/Order_Layout/order.css" />
<script src="~/js/order/order_script.js"></script>

<div class="left-grid">
    <div class="header">
        <img src="/images/debra-logo.png" alt="Alternate Text" />
    </div>
    <div class="thx">
        <img src="/images/order/finish_icon.png" />
        <div class="thx-text">
            <p>Order #1001</p>
            <h3>Thank you!</h3>
        </div>
    </div>
    <div class="confirm-tab">
        <h4>Your order is confirmed</h4>
        <p>You'll receive a confirmation email with your order number shortly.</p>
    </div>
    <div class="confirm-tab customer-tab">
        <h4>Customer information</h4>
        <div class="column-div">
            <h5>Contact information</h5>
            <p>email@email</p>
        </div>
        <div class="column-div">
            <h5>Shipping Address</h5>
            <p>jmeno prijmeni</p>
            <p>address</p>
            <p>appartment</p>
            <p>postal code city</p>
            <p>country</p>
        </div>
        <div class="column-div">
            <h5>Shipping method</h5>
            <p>method</p>
        </div>
        <div class="column-div">
            <h5>Payment method</h5>
            <p>method</p>
        </div>
        <div class="column-div">
            <h5>Billing address</h5>
            <p>jmeno prijmeni</p>
            <p>address</p>
            <p>appartment</p>
            <p>postal code city</p>
            <p>country</p>
        </div>
    </div>

    <div class="form-buttons finished-button">
        <div class="grid-input-left"></div>
        <a asp-action="Index" asp-controller="Home" class="grid-input-right" type="button">Continue shopping</a>
    </div>
</div>
<vc:right-grid-component></vc:right-grid-component>