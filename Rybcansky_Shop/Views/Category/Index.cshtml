@{
    Layout = "Administration_Layout";
}


<a asp-controller="Category" asp-action="Create" class="btn btn-primary">Vytvořit novou kategorii</a>

<table class="table">
    <tr>
        <th>Název</th>
    </tr>

    @foreach (Category category in this.ViewBag.Items)
    {
        <tr>
            <td>@category.name</td>
            <td><a asp-controller="Category" asp-action="Detail" asp-route-id="@category.id">Zobrazit</a></td>
            <td><a asp-controller="Category" asp-action="Edit" asp-route-id="@category.id">Upravit</a></td>
            <td><a asp-controller="Category" asp-action="Delete" asp-route-id="@category.id">Smazat</a></td>
        </tr>
    }
</table>
